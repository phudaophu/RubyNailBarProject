@page "/users"

@inject IUsersService UsersService
@rendermode InteractiveServer

<h3>User</h3>

<SearchBarComponent SearchUsersCallBack="HandleSearchUser" @ref="searchBarComponent"></SearchBarComponent>


<UserListComponent FilteredUsersData="@filteredUsers"></UserListComponent>



@code {


    private string? filteredUsers = "";

    private SearchBarComponent? searchBarComponent;

    public void HandleSearchUser(string userFilterData)
    {

        filteredUsers = userFilterData;

    }
    




}
