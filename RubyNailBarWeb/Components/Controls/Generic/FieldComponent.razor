
<div class="row mb-3 align-items-center">
    <div class="col-4">
        <label class="col-form-label">@Label</label>
    </div>
    <div class="col-7">
        @Control
    </div>
    <div class="col">
        @ValidationControl
    </div>
</div>

@code {
    [Parameter]
    public string? Label { get; set; }

    [Parameter]
    public RenderFragment? Control { get; set; }

    [Parameter]
    public RenderFragment? ValidationControl { get; set; }
}
